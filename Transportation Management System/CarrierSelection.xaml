<Window x:Class="Transportation_Management_System.CarrierSelection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Transportation_Management_System"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" 
        Title="Carrier Selection" Height="400" Width="420">
    <Grid>
        <ListView x:Name="CarrierList" ></ListView>
        <Button x:Name="SelectCarrier" Content="Select Carrier" Margin="312,322,10,18" Click="SelectCarrier_Click" />
    </Grid>
</Window>
